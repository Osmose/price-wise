{
  "manifest_version": 2,
  "name": "moz-commerce",
  "version": "0.1.0",
  "description": "",
  "applications": {
    "gecko": {
      "id": "commerce@mozilla.org"
    }
  },
  "icons": {
    "16": "icon.svg",
    "24": "icon.svg",
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icon.svg"
  },
  "sidebar_action": {
    "default_icon": "icon.svg",
    "default_title": "Commerce",
    "default_panel": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["in_page.js"]
    }
  ],
  "experiment_apis": {
    "urlbarPill": {
      "schema": "urlbar_pill_schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "events": ["startup"],
        "paths": [
          ["experiments", "urlbarPill"]
        ],
        "script": "urlbar_pill.js"
      }
    }
  }
}
